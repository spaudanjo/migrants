<%= form_for(@immigrant, :html => { :class => "form-horizontal well"}) do |f| %>
  <% if @immigrant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@immigrant.errors.count, "error") %> prohibited this immigrant from being saved:</h2>

      <ul>
      <% @immigrant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :nickname, :class => "control-label"%>
    <div class="controls">
      <%= f.text_field :nickname %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :first_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :first_name %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :last_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sex, :class => "control-label" %>
    <div class="controls">
      <label class="radio">
        <%= f.radio_button :sex, 'false', :checked => true %>
        Female
      </label>
      <label class="radio">
        <%= f.radio_button :sex, 'true' %>
        Male 
      </label>
      
    </div>
  </div>
  <div class="form-actions">
     <%= f.submit :class => "btn btn-primary" %>
     <%= link_to 'Back', events_path, :class => "btn" %>
   </div>
<% end %>
