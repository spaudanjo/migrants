<% @immigrants.each do |immigrant| %>
  <tr>
    <td><%= immigrant.nickname %></td>
    <td><%= immigrant.first_name %></td>
    <td><%= immigrant.last_name %></td>
    <td><%= immigrant.sex %></td>
    <td><%= link_to 'Show', immigrant %></td>
    <td><%= link_to 'Edit', edit_immigrant_path(immigrant) %></td>
    <td><%= link_to 'Destroy', immigrant, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

